extends layout

block style
  style(type='text/css').
    .nav-pills li {width: 32%; background-color: #ffffff; margin-bottom:0.5%; margin-right: 0.2%}
    #customer { width: 100%; padding-top: 10px; padding-left: 25px;}
    #secA, #secB, #secC, #secD, #secE, #secF {background-color: #ffffff; height: 200px; width: 98%}
    #Q1 {border: solid; background-color: #ffffff; height: 40px; padding-left: 10px; padding-right: 10px; padding-top: 10px; border-width: 1px;}
    #Q1 span {float: right;}
    #answer {border: solid; background-color: #ffffff; height: 40px; padding-left: 10px; padding-right: 10px; padding-top: 10px; border-width: 1px; display: none;}
    #Q1:active {background-color: #1712AB;}

