block script_content
	script(type='text/javascript').
    var count =0;
    function QnA(){
    var q = document.getElementById("Q1");
    var ans = document.getElementById("answer");
    if(count == 0){
    q.innerHTML="Q. what is Jat-Kyu??"+"<span "+"class="+"\\"glyphicon glyphicon-chevron-up\""+"></span>";
    ans.style.display ="block";
    count=1;
    }
    else{
    q.innerHTML="Q. what is Jat-Kyu??"+"<span "+"class="+"\\"glyphicon glyphicon-chevron-down\""+"></span>";
    ans.style.display = "none";
    count=0;
    }
    }