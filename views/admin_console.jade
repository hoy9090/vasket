    center
      #table1
        table#tb-1
          thead
            th 이름
            th ID
            th 가입일
            th 이메일
            th 회원등급
          each val in user
            tr
              td= val.name
              td= val.id
              td= val.date
              td= val.email
              td 일반
      #table2
        table#tb-2
          thead
            th 상품명
            th 상품코드
            th 브랜드
            th 원가
            th 수량
            th 최대할인율
            th 판매상태
            th 홍보 문구
          each val in product
            tr
              td= val.name
              td= val.no
              td= val.brand
              td= val.price
              td= val.inven
              td 0
              td= val.state
              td= val.comment

