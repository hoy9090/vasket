extends layout

block style
	style(type='text/css').
		body {background-color:#ffffff;}
		table {width:1000px; margin-top:10px;}
		th {width:200px; background-color:#f6f6f6; padding-top:4px;padding-bottom:4px;text-align:center;border-style:solid; border-width:1px; border-color:#d5d5d5;}
		td {width:300px; background-color:#ffffff; padding-top:4px;padding-bottom:4px; padding-left:5px; border-style:solid; border-width:1px; border-color:#d5d5d5;}
		.red {color:#b70000}
block content
	center
		form(action='/reg_contact' method='post')
			table()
				tr
					th 업체명
					td.
						<input type="text" name='name'>
					th 업체종류
					td.
						<select name='type'>
							<option>선택</option>
							<option>화장품/뷰티</option>
							<option>악세사리</option>
							<option>의류/신발</option>
							<option>취미(영화,도서,악기,..)</option>
							<option>IT</option>
							<option>HOME/KIDS</option>
						</select>
				tr
					th 업체주소
					td(colspan="3").
						<input type="text" name='addr'>
				tr
					th 담당자명
					td.
						<input type="text" name='rep_name'>
					th 담당자 연락처
					td.
						<select name='rep_phone_1'>
							<option>010</option>
							<option>011</option>
							<option>016</option>
							<option>017</option>
							<option>018</option>
							<option>019</option>
						</select>
						-
						<input type="text" maxlength="4" size="4" name='rep_phone_2'>
						-
						<input type="text" maxlength="4" size="4" name='rep_phone_3'>
				tr
					th 담당자 이메일
					td(colspan="3").
						<input type="text" name='rep_email_1'>
						@
						<input type="text" name='rep_email_2'>
				tr
					th 홈페이지
					td(colspan="3").
						<input type="text" name='homepage' value="http://">
				tr
					th 파일첨부
					td(colspan="3").
						<p class="red">*제휴양식 다운로드 후 작성하여 파일첨부 부탁드립니다. (파일 미 첨부 시에는 제휴문의가 불가합니다)</p>
						<button>제휴양식 다운로드</button>
						<button>파일첨부</button>
						<input type="text" disabled>
				tr
					th 제휴문의
					td(colspan="3").
						<textarea rows="5" style="width:800px;max-width:800px;"></textarea>