extends layout

block style
	style(type='text/css').
		body {background-color:#f6f6f6; padding-top:70px;}
		#titleBlock {background-color:#ffffff; width:100%; height:50px; border-width:0px; border-style:solid; border-color:#bbbbbb; border-bottom-width:1px; border-top-width:1px; padding-top:10px;}
		#imgBlock {background-color:#ffffff; width:100%;}
		#commentBlock {background-color:#ffffff; width:100%;border-width:0px; border-style:solid; border-color:#bbbbbb; border-bottom-width:1px; border-top-width:1px; padding-top:20px; padding-bottom:20px;}
		.blue { color:#0100ff; font-weight:bold; font-size:100%;}
		.userName{float:left;}
		#likeBlock {background-color:#ffffff; text-align:center; width:100%; padding-top:5px;}
block content
	#titleBlock.col-xs-12
		.row
			.col-xs-2
				img(src='./images/brand_logo/#{community.brandImage}' width='30px;')
			.col-xs-7
				h6= community.brandName
			.col-xs-3
				h6= community.email
	#imgBlock.col-xs-12
		img(src='./images/community/#{community.image}' width="100%;")
	#commentBlock.col-xs-12
		p= community.content
	#likeBlock.col-xs-12
		.row
			.col-xs-4
				img(src='./images/heart.png' width='25px;')
				h6 32
			.col-xs-4
				img(src='./images/speech.png' width='25px;')
				h6 12
			.col-xs-4
				img(src='./images/view.png' width='25px;')
				h6= community.view


